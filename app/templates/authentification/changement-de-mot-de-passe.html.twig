{#Page de changement de mot de passe#}

{% extends 'base.html.twig' %}

{% block title %}Changement de mot de passe | {{ parent() }}{% endblock %}

{% block body %}
<main role="main">
    <div class="lead mx-auto" style="width: 800px;">

        <div class="container mt-4">
            <h4><img src="{{ asset('assets/img/logo.svg') }}" alt="Logo Gesip">
            GEStionnaire des Interventions Programm√©es</h4>
        </div>


        <div class="mt-4 mx-auto" style="width: 280px;">
            <p><b>Modifiez votre mot de passe</b></p>
        </div>

        <div class="container mt-5">

                {{ form_start(formChangementMotdepasse, {'attr': {'class': 'login-form'}}) }}

                        <div class="form-group row">
                            {{ form_label(formChangementMotdepasse.label, null, {
                                'label_attr': {'class': 'col-sm-3 col-form-label'}
                            }) }}
                            <div class="col-sm-9">

                                    {{ form_widget(formChangementMotdepasse.label, {'attr': {'class': 'form-control'}}) }}

                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(formChangementMotdepasse.motdepasse, null, {
                                'label_attr': {'class': 'col-sm-4 col-form-label'}
                            }) }}
                            <div class="col-sm-8">
                                {% if erreurMotdepasse == true %}
                                    {{ form_widget(formChangementMotdepasse.motdepasse, {'attr': {'class': 'form-control form-control-error', 'autocomplete': 'off'}}) }}
                                    Mot de passe invalide
                                {% else %}
                                    {{ form_widget(formChangementMotdepasse.motdepasse, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
                                {% endif %}

                            </div>
                        </div>

                        <div class="mt-5 form-group row">
                            {{ form_label(formChangementMotdepasse.nouveauMotdepasse.first, null, {
                                'label_attr': {'class': 'col-sm-4 col-form-label'}
                            }) }}
                            <div class="col-sm-8">
                                {% if form_errors(formChangementMotdepasse.nouveauMotdepasse.first) %}
                                    {{ form_widget(formChangementMotdepasse.nouveauMotdepasse.first, {'attr': {'class': 'form-control form-control-error', 'autocomplete': 'off'}}) }}
                                {% else %}
                                    {{ form_widget(formChangementMotdepasse.nouveauMotdepasse.first, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
                                {% endif %}

                            </div>
                            {{ form_label(formChangementMotdepasse.nouveauMotdepasse.second, null, {
                                    'label_attr': {'class': 'col-sm-4 col-form-label'}
                            }) }}
                            <div class="col-sm-8">
                                {{ form_widget(formChangementMotdepasse.nouveauMotdepasse.second, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}

                              <div>{{ form_errors(formChangementMotdepasse.nouveauMotdepasse.first) }}</div>
                              </div>
                        </div>

                        <div class="mt-4 mx-auto" style="width: 70px;">
                            {{ form_row(formChangementMotdepasse.boutonvalidation, {'attr': { 'class': 'btn btn-primary' }}) }}
                        </div>

                {{ form_end(formChangementMotdepasse) }}

                <div class="mt-3 mx-auto" style="width: 70px;">
                    <style="text-align:center;"><a href="{{ path('connexion') }}">Annuler</a>
                </div>

        </div>
    </div>
</main>

{% endblock %}
