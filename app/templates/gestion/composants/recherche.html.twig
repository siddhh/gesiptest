{% extends 'base.pleine.html.twig' %}

{% block title %}Recherche des composants | {{ parent() }}{% endblock %}

{% block contenu %}

    {# Header #}
    <div class="page-header">
        <div class="row">
            <div class="col-8">
                <h2>{% block titre_contenu %}Recherche des composants{% endblock %}</h2>
            </div>
            <div class="col-4 text-right">
                <a href="{{ path('gestion-composants-creation') }}" class="btn btn-primary">Créer un composant</a>
            </div>
        </div>
    </div>

    {# Form #}
    <div class="page-label">
        {{ form_start(form) }}

            <div class="form-group row" id="label">
                {{ form_label(form.label, 'Composant', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                <div class="col-10">
                    {{ form_widget(form.label, {'attr': {'class': 'form-control select-picker'}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.label) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="equipe">
                {{ form_label(form.equipe, 'Equipe', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                <div class="col-10">
                    {{ form_widget(form.equipe, {'attr': {'class': 'form-control select-picker'}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.equipe) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="pilote">
                {{ form_label(form.pilote, 'Pilote', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                <div class="col-10">
                    {{ form_widget(form.pilote, {'attr': {'class': 'form-control select-picker'}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.pilote) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="exploitant">
                {{ form_label(form.exploitant, 'Exploitant', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                <div class="col-10">
                    {{ form_widget(form.exploitant, {'attr': {'class': 'form-control select-picker'}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.exploitant) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="usager">
                {{ form_label(form.usager, 'Usager', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                <div class="col-10">
                    {{ form_widget(form.usager, {'attr': {'class': 'form-control '}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.usager) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="domaine">
                {{ form_label(form.domaine, 'Domaine', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                <div class="col-10">
                    {{ form_widget(form.domaine, {'attr': {'class': 'form-control select-picker'}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.domaine) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="is_archived">
                {{ form_label(form.is_archived, 'Afficher les composants archivés', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                <div class="col-10">
                    {{ form_widget(form.is_archived, {'attr': {'class': 'filled-in '}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.is_archived) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" role="toolbar">
                <div class="col-12">
                    <div class="float-left">
                        <a href="{{ path('gestion-composants-liste') }}" type="button" class="btn btn-secondary">Annuler</a>
                    </div>

                    <div class="float-right">
                        {% block boutons %}
                            {{ form_widget(form.reset, {'attr': {'class': 'btn btn-secondary'}}) }}
                            <button type="submit" class="btn btn-primary recherche-composant ">Recherche</button>
                        {% endblock %}
                    </div>
                </div>
            </div>

        {{ form_end(form) }}
    </div>

    {# Tableau des résultats #}
    <div class="page-list " style="display: none;" >
        <table id="tableau-resultats" data-url="" class="table mt-5">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Composant</th>
                    <th scope="col">Equipe</th>
                    <th scope="col">Pilote</th>
                    <th scope="col">Exploitant</th>
                    <th scope="col">Usager</th>
                    <th scope="col">Domaine</th>
                    <th scope="col">Archivé</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/form.js') }}"></script>
    <script src="{{ asset('assets/js/composants/listing.js') }}" type="text/javascript"></script>

{% endblock %}

