{% extends 'base.pleine.html.twig' %}

{% block title %}Gestion des pilotes | {{ parent() }}{% endblock %}

{% block contenu %}

    {# Header #}
    <div class="page-header">
        <div class="row">
            <div class="col-8">
                <h2>{% block titre_contenu %}Création d'un pilote{% endblock %}</h2>
            </div>
        </div>
    </div>

    {# Form #}
    <div class="page-label">
        {{ form_start(form) }}
            <div class="form-group row" id="nom">
                {{ form_label(form.nom, 'Nom*', {'label_attr': {'class': 'col-2 col-form-label ' ~ (form.nom.vars.valid ? '' : 'form-label-error') }}) }}
                <div class="col-10">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control ' ~ (form.nom.vars.valid ? '' : 'form-control-error')}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="prenom">
                {{ form_label(form.prenom, 'Prénom*', {'label_attr': {'class': 'col-2 col-form-label ' ~ (form.prenom.vars.valid ? '' : 'form-label-error') }}) }}
                <div class="col-10">
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control ' ~ (form.prenom.vars.valid ? '' : 'form-control-error')}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
            </div>

            <div class="form-group form-ldap row" data-type="personnes">
                {{ form_label(form.balp, 'BALP*', {'label_attr': {'class': 'col-2 col-form-label ' ~ (form.balp.vars.valid ? '' : 'form-label-error') }}) }}
                <div class="col-10">
                    <div class="position-relative">
                        {{ form_widget(form.balp, {'attr': {'class': 'form-control ' ~ (form.balp.vars.valid ? '' : 'form-control-error') }}) }}
                        <span class="fa fa-fw fa-times field-icon reset-field"></span>
                        <span class="fa fa-fw fa-spinner field-icon"></span>
                    </div>
                    <div class="form-ldap-resultats">
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.balp) }}
                    </div>
                </div>
            </div>

            <div class="form-group row" id="equipe">
                {{ form_label(form.equipe, 'Equipe*', {'label_attr': {'class': 'col-2 col-form-label' ~ (form.equipe.vars.valid ? '' : 'form-label-error') }}) }}
                <div class="col-10">
                    {{ form_widget(form.equipe, {'attr': {'class': 'form-control' ~ (form.equipe.vars.valid ? '' : 'form-control-error')}}) }}
                    <div class="form-errors">
                        {{ form_errors(form.equipe) }}
                    </div>
                </div>
            </div>



            <!--VALIDATION-->
            <div class="form-group row" role="toolbar">
                <div class="col-12">
                    <div class="float-left">
                        <a href="{{ path('gestion-pilotes-liste') }}" type="button" class="btn btn-secondary">Annuler</a>
                    </div>
                    <div class="float-right">
                        {% block boutons %}
                            <button type="submit" class="btn btn-primary">Enregistrer le pilote</button>
                        {% endblock %}
                    </div>
                </div>
            </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/form.js') }}"></script>
{% endblock %}

